---
# Template for Kubernetes Secret
# This file should be populated by the deployment script with actual values
# DO NOT commit the actual secret.yaml file with real credentials
apiVersion: v1
kind: Secret
metadata:
  name: dataprime-secrets
  namespace: dataprime-demo
  labels:
    app: dataprime-demo
type: Opaque
stringData:
  # Coralogix Token - Base64 encoded by Kubernetes automatically when using stringData
  CX_TOKEN: "REPLACE_WITH_CORALOGIX_TOKEN"
  
  # OpenAI API Key
  OPENAI_API_KEY: "REPLACE_WITH_OPENAI_API_KEY"
  
  # PostgreSQL Database Password
  DB_PASSWORD: "REPLACE_WITH_DB_PASSWORD"
  
  # Coralogix RUM API Key (for browser SDK)
  CX_RUM_API_KEY: "REPLACE_WITH_CX_RUM_API_KEY"
  
  # Coralogix RUM Source Map Upload Key (for CLI)
  CX_RUM_SOURCE_MAP_KEY: "REPLACE_WITH_CX_RUM_SOURCE_MAP_KEY"



